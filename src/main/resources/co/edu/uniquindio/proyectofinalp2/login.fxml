<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.proyectofinalp2.controllers.LoginController"
      style="-fx-background-color: #f5f5f5; -fx-padding: 40;">

    <Label text="Sistema de Logística"
           style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <Label text="Iniciar Sesión"
           style="-fx-font-size: 18;"/>

    <VBox spacing="15"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">

        <Label text="Email:"/>
        <TextField fx:id="txtEmail"
                   promptText="Ingrese su email"
                   style="-fx-pref-width: 250;"/>

        <Label text="Contraseña:"/>
        <PasswordField fx:id="txtPassword"
                       promptText="Ingrese su contraseña"
                       style="-fx-pref-width: 250;"/>

        <Button text="Ingresar"
                onAction="#iniciarSesion"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 250;"/>

        <Label fx:id="lblMensaje"
               style="-fx-padding: 10 0 0 0;"/>
    </VBox>

    <!--  ESTE ES EL BOTÓN QUE DEBE ABRIR REGISTRO -->
    <Button text="Registrarse"
            onAction="#mostrarPantallaRegistro"
            style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>

</VBox>
