<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.proyectofinalp2.controllers.RepartidoresAdminController"
            prefWidth="800" prefHeight="500">

    <top>
        <Label text="GESTIÓN DE REPARTIDORES"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 20 0 20 0;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="25" alignment="CENTER" style="-fx-padding: 10;">

            <!-- ===================== -->
            <!-- REPARTIDORES ACTIVOS  -->
            <!-- ===================== -->
            <Label text="Repartidores Activos" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <TableView fx:id="tablaRepartidores" prefHeight="160" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="220"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="150"/>
                </columns>
            </TableView>

            <!-- ========================= -->
            <!-- SOLICITUDES PENDIENTES    -->
            <!-- ========================= -->
            <Label text="Solicitudes Pendientes" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <TableView fx:id="tablaSolicitudes" prefHeight="160" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colSNombre" text="Nombre" prefWidth="220"/>
                    <TableColumn fx:id="colSEmail" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="colSTelefono" text="Teléfono" prefWidth="150"/>
                </columns>
            </TableView>

        </VBox>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">

            <Button text="Aprobar Solicitud" fx:id="btnAprobar" onAction="#aprobarSolicitud"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>

            <Button text="Rechazar Solicitud" fx:id="btnRechazar" onAction="#rechazarSolicitud"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>

            <Button text="Volver"
                    onAction="#volver"
                    style="-fx-background-color: #7f8c8d; -fx-text-fill: white;"/>

            <Label fx:id="lblMensaje" style="-fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>
