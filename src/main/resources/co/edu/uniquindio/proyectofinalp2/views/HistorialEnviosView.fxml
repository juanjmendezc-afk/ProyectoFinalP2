<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.proyectofinalp2.controllers.HistorialEnviosController"
            prefWidth="600" prefHeight="400">

    <VBox spacing="10" alignment="CENTER"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <Label text="Historial de envÃ­os"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="tablaEnvios" prefHeight="300" prefWidth="550">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colOrigen" text="Origen" prefWidth="150"/>
                <TableColumn fx:id="colDestino" text="Destino" prefWidth="150"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                <TableColumn fx:id="colCosto" text="Costo" prefWidth="100"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Exportar CSV" onAction="#exportarCSV"/>
            <Button text="Exportar PDF" onAction="#exportarPDF"/>
        </HBox>

        <Button text="Cerrar" onAction="#cerrarVentana"/>
    </VBox>

</AnchorPane>
