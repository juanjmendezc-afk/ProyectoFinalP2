<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="15"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.proyectofinalp2.controllers.UsuariosAdminController"
      style="-fx-padding: 20;">

    <Label text="GESTIÓN DE USUARIOS"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- Tabla -->
    <TableView fx:id="tablaUsuarios" prefHeight="300" prefWidth="700">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="160"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
            <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
            <TableColumn fx:id="colRol" text="Rol" prefWidth="100"/>
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="90"/>
        </columns>
    </TableView>

    <!-- Botones de acción -->
    <HBox spacing="10">
        <Button text="Editar Usuario" onAction="#editarUsuario"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button text="Eliminar Usuario" onAction="#eliminarUsuario"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button text="Cambiar Estado" onAction="#cambiarEstado"
                style="-fx-background-color: #f1c40f; -fx-text-fill: black;"/>
    </HBox>

    <Label fx:id="lblMensaje" style="-fx-font-weight: bold;"/>

    <Button text="Volver"
            onAction="#volver"
            style="-fx-background-color: #7f8c8d; -fx-text-fill: white;"/>

</VBox>
