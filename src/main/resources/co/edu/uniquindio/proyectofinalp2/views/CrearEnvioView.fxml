<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.proyectofinalp2.controllers.CrearEnvioController"
            prefWidth="400" prefHeight="420">

    <VBox spacing="10" alignment="CENTER"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <Label text="Crear nuevo envío"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="txtOrigen" promptText="Dirección de origen"/>
        <TextField fx:id="txtCiudadOrigen" promptText="Ciudad de origen"/>

        <TextField fx:id="txtDestino" promptText="Dirección de destino"/>
        <TextField fx:id="txtCiudadDestino" promptText="Ciudad de destino"/>

        <TextField fx:id="txtCosto" promptText="Costo del envío (ej: 25000)"/>

        <Button text="Guardar envío" onAction="#guardarEnvio"/>
        <Label fx:id="lblMensaje" style="-fx-text-fill: green;"/>

        <Button text="Volver" onAction="#volver"/>

    </VBox>
</AnchorPane>
