<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.proyectofinalp2.controllers.CrearEnvioController"
            prefWidth="600" prefHeight="500">

    <fx:define>
        <ToggleGroup fx:id="grupoPago"/>
    </fx:define>

    <top>
        <Label text="Crear Nuevo Envío"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 15;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>

        <VBox spacing="12">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- ORIGEN -->
            <Label text="Origen" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Calle:"/>
                    <TextField fx:id="txtOrigen" promptText="Ej: Calle 10 #15-22"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Ciudad:"/>
                    <TextField fx:id="txtCiudadOrigen" promptText="Ej: Armenia"/>
                </VBox>
            </HBox>

            <!-- DESTINO -->
            <Label text="Destino" style="-fx-font-size: 16px; -fx-font-weight: bold; margin-top: 10;"/>

            <HBox spacing="10">
                <VBox spacing="5">
                    <Label text="Calle:"/>
                    <TextField fx:id="txtDestino" promptText="Ej: Carrera 7 #20-10"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Ciudad:"/>
                    <TextField fx:id="txtCiudadDestino" promptText="Ej: Pereira"/>
                </VBox>
            </HBox>

            <!-- COSTO -->
            <VBox spacing="5">
                <Label text="Costo:"/>
                <TextField fx:id="txtCosto" promptText="Costo del envío" editable="false"/>
            </VBox>

            <!-- MÉTODO DE PAGO -->
            <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                <Label text="Método de pago:" style="-fx-font-weight: bold;"/>

                <RadioButton fx:id="rbTarjeta" text="Tarjeta" toggleGroup="$grupoPago"/>
                <RadioButton fx:id="rbContraEntrega" text="Contra Entrega" toggleGroup="$grupoPago"/>
            </HBox>

            <!-- MENSAJE -->
            <Label fx:id="lblMensaje" style="-fx-font-size: 14px; -fx-padding: 5;"/>

            <!-- BOTONES -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Guardar envío"
                        onAction="#guardarEnvio"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>

                <Button text="Volver"
                        onAction="#volver"
                        style="-fx-background-color: #7f8c8d; -fx-text-fill: white;"/>
            </HBox>

        </VBox>

    </center>

</BorderPane>
