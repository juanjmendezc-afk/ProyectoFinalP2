<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.proyectofinalp2.controllers.LoginController"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30;">

    <Label text="Registro de Usuario"
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">

        <Label text="Nombre Completo:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtNombreRegistro"
                   promptText="Ingrese su nombre completo"
                   style="-fx-pref-width: 300;"/>

        <Label text="Email:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtEmailRegistro"
                   promptText="Ingrese su email"
                   style="-fx-pref-width: 300;"/>

        <Label text="Teléfono:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtTelefonoRegistro"
                   promptText="Ingrese su teléfono"
                   style="-fx-pref-width: 300;"/>

        <Label text="Contraseña:" style="-fx-font-weight: bold;"/>
        <PasswordField fx:id="txtPasswordRegistro"
                       promptText="Ingrese su contraseña"
                       style="-fx-pref-width: 300;"/>

        <Label text="Confirmar Contraseña:" style="-fx-font-weight: bold;"/>
        <PasswordField fx:id="txtConfirmarPassword"
                       promptText="Confirme su contraseña"
                       style="-fx-pref-width: 300;"/>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="btnRegistrar"
                    text="Registrarse"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="btnVolverLogin"
                    text="Volver al Login"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        </HBox>

        <Label fx:id="lblMensajeRegistro"
               style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;"
               wrapText="true"/>

    </VBox>
</VBox>